{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": true,
    "outDir": "js/",
    "allowJs": true,
    "rootDir": "src",
    "allowUnreachableCode": true
  },
  "include": [
    "src/**/*"
  ]
}